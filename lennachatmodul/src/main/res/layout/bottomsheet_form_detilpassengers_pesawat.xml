<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_rounded"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Detil Penumpang Pesawat"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewClosePlane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_bt_close" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llKeberangkatan1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passenger 1"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Titel"
                android:textColor="@color/manatee"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/text_view_tuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_primary_rounded_register"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="Tuan"
                    android:textColor="@color/colorFilm"
                    tools:text="Tuan" />

                <TextView
                    android:id="@+id/text_view_nyonya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_button_transfer_rounded_register"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="Nyonya"
                    android:textColor="@color/tundora"
                    tools:text="Nyonya" />
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_plane_passenger_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Nama Sesuai KTP/Identitas"
                        android:textColor="@color/manatee"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_plane_passenger_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_edittext_login"
                        android:fontFamily="@font/quicksand"
                        android:inputType="text"
                        android:paddingLeft="14dp"
                        android:paddingTop="10dp"

                        android:paddingRight="14dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_solid"
                        android:textColorHint="@color/black_solid"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_date_plane_passenger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Tanggal Lahir"
                        android:textColor="@color/manatee"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_date_plane_passenger"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_edittext_login"
                        android:fontFamily="@font/quicksand"
                        android:inputType="none"
                        android:focusable="false"
                        android:paddingLeft="14dp"
                        android:paddingTop="10dp"

                        android:paddingRight="14dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_solid"
                        android:textColorHint="@color/black_solid"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_kewarganegaraan_plane_passenger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Kewarganegaraan"
                        android:textColor="@color/manatee"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:background="@drawable/background_edittext_login">

                        <Spinner
                            android:id="@+id/spKewarganegaraan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:drawSelectorOnTop="true"
                            android:gravity="center"
                            android:spinnerMode="dialog"
                            android:textColor="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_identity_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Nomor KTP/Identitas"
                        android:textColor="@color/manatee"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_identity_number"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_edittext_login"
                        android:fontFamily="@font/quicksand"
                        android:inputType="number"
                        android:paddingLeft="14dp"
                        android:paddingTop="10dp"

                        android:paddingRight="14dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_solid"
                        android:textColorHint="@color/black_solid"
                        android:textSize="14sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/gray_passenger">

                    </View>


                    <TextView
                        android:id="@+id/tv_passpord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="PASSPORT"
                        android:textColor="@color/manatee"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_no_passpord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Nomor"
                        android:textColor="@color/manatee"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_no_passpord"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_edittext_login"
                        android:fontFamily="@font/quicksand"
                        android:inputType="number"
                        android:paddingLeft="14dp"
                        android:paddingTop="10dp"

                        android:paddingRight="14dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_solid"
                        android:textColorHint="@color/black_solid"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_passport_countrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Negara yang mengeluarkan"
                        android:textColor="@color/manatee"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:background="@drawable/background_edittext_login">

                        <Spinner
                            android:id="@+id/spPassportCountrey"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:drawSelectorOnTop="true"
                            android:gravity="center"
                            android:spinnerMode="dialog"
                            android:textColor="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_expired"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Berlaku sampai"
                        android:textColor="@color/manatee"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_expired"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/background_edittext_login"
                        android:fontFamily="@font/quicksand"
                        android:inputType="none"
                        android:focusable="false"
                        android:paddingLeft="14dp"

                        android:paddingTop="10dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_solid"
                        android:textColorHint="@color/black_solid"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


            <EditText
                android:id="@+id/et_uang_u"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_edittext_login"
                android:fontFamily="@font/quicksand"
                android:inputType="numberDecimal"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:paddingRight="14dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black_solid"
                android:textColorHint="@color/black_solid"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_emas_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Simpanan Emas"
                android:textColor="@color/manatee"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_emas_e"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_edittext_login"
                android:fontFamily="@font/quicksand"
                android:inputType="numberDecimal"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:paddingRight="14dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black_solid"
                android:textColorHint="@color/black_solid"
                android:textSize="14sp"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button_batal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_button_detil_passengers_rounded"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Tambah Penumpang"

                    android:textAllCaps="false"
                    android:textColor="@color/manatee"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/button_proses_plane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_button_zakat_primary_rounded"
                    android:fontFamily="@font/quicksand_bold"

                    android:text="Proses"
                    android:textAllCaps="false"
                    android:textColor="@color/white_solid"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>