<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvNews"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_solid">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/image_view"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logo_indosatooredoo" />

            <TextView
                android:id="@+id/textViewAirline"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/quicksand_regular"
                android:text=""
                android:textColor="@color/tundora"
                android:textSize="13sp"
                tools:text="Lion JT-34" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="110dp">
                    <TextView
                        android:id="@+id/textViewDepartTime"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="14:50" />
                    <TextView
                        android:id="@+id/textViewDepartDate"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="18 Feb" />
                    <TextView
                        android:id="@+id/textViewEstimasiJam"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="2j 45m" />

                    <TextView
                        android:id="@+id/textViewArriveTime"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="14:50" />
                    <TextView
                        android:id="@+id/textViewArriveDate"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="18 Feb" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image_viewBulatAtas"
                        android:layout_marginTop="4dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/selected_dot" />
                    <View
                        android:layout_below="@+id/image_viewBulatAtas"
                        android:layout_above="@+id/image_viewBulatBawah"
                        android:layout_width="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark" />
                    <ImageView
                        android:id="@+id/image_viewBulatBawah"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/selected_dot" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="110dp">
                    <TextView
                        android:id="@+id/textViewOriginCity"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="Jakarta (CGK)" />
                    <TextView
                        android:id="@+id/textViewAirportName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="Soekarno - Hatta" />
                    <TextView
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="Langsung" />
                    <TextView
                        android:id="@+id/textViewDestinationCity"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="Denpasar" />
                    <TextView
                        android:id="@+id/textViewDestinationAirport"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:fontFamily="@font/quicksand_regular"
                        tools:text="Ngurah Rai" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewActionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_primary_rounded_travel"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center_horizontal"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="14dp"
                android:paddingStart="24dp"
                android:paddingTop="10dp"
                android:paddingEnd="24dp"
                android:paddingBottom="12dp"
                tools:text="Rp 1.2000.000"
                android:textColor="@color/white_solid"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>