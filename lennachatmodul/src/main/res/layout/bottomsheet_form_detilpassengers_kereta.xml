<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_rounded"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_rounded"

        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Detil Penumpang Kereta"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_bt_close" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llKeberangkatan1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Titel"
                    android:textColor="@color/manatee"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/text_view_tuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_primary_rounded_register"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="Tuan"
                        android:textColor="@color/colorFilm"
                        tools:text="Tuan" />

                    <TextView
                        android:id="@+id/text_view_nyonya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_button_transfer_rounded_register"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="Nyonya"
                        android:textColor="@color/tundora"
                        tools:text="Nyonya" />
                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_namapnmpg_kereta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Nama Sesuai KTP/Identitas"
                            android:textColor="@color/manatee"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_namapnmpg_kereta"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_edittext_login"
                            android:fontFamily="@font/quicksand"
                            android:inputType="text"
                            android:paddingLeft="14dp"
                            android:paddingTop="10dp"

                            android:paddingRight="14dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black_solid"
                            android:textColorHint="@color/black_solid"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_tgl_lahir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Tanggal Lahir"
                            android:textColor="@color/manatee"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_tgl_lahir"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_edittext_login"
                            android:focusable="false"
                            android:fontFamily="@font/quicksand"
                            android:inputType="none"
                            android:paddingLeft="14dp"
                            android:paddingTop="10dp"

                            android:paddingRight="14dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black_solid"
                            android:textColorHint="@color/black_solid"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/tv_no_ktp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Nomor KTP/Identitas"
                            android:textColor="@color/manatee"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_no_ktp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_edittext_login"
                            android:fontFamily="@font/quicksand"
                            android:inputType="number"
                            android:paddingLeft="14dp"
                            android:paddingTop="10dp"

                            android:paddingRight="14dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black_solid"
                            android:textColorHint="@color/black_solid"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/tv_no_handphone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="No telp/Handphone"
                            android:textColor="@color/manatee"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_no_telp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_edittext_login"
                            android:fontFamily="@font/quicksand"
                            android:inputType="number"
                            android:paddingLeft="14dp"
                            android:paddingTop="10dp"

                            android:paddingRight="14dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black_solid"
                            android:textColorHint="@color/black_solid"
                            android:textSize="14sp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/gray_passenger">

                        </View>


                        <TextView
                            android:id="@+id/tv_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Contact"
                            android:textColor="@color/manatee"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_namapemesan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Nama Pemesan"
                            android:textColor="@color/manatee"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_namapemesan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_edittext_login"
                            android:fontFamily="@font/quicksand"
                            android:inputType="text"
                            android:paddingLeft="14dp"
                            android:paddingTop="10dp"

                            android:paddingRight="14dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black_solid"
                            android:textColorHint="@color/black_solid"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Email"
                            android:textColor="@color/manatee"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_edittext_login"
                            android:fontFamily="@font/quicksand"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="14dp"
                            android:paddingTop="10dp"

                            android:paddingRight="14dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black_solid"
                            android:textColorHint="@color/black_solid"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_no_telp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="No Handphone"
                            android:textColor="@color/manatee"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_no_handphone"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_edittext_login"
                            android:fontFamily="@font/quicksand"
                            android:inputType="number"
                            android:paddingLeft="14dp"
                            android:paddingTop="10dp"

                            android:paddingRight="14dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black_solid"
                            android:textColorHint="@color/black_solid"
                            android:textSize="14sp" />
                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_batal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_button_detil_passengers_rounded"
                android:fontFamily="@font/quicksand_bold"
                android:text="Tambah Penumpang"

                android:textAllCaps="false"
                android:textColor="@color/manatee"
                android:textSize="14sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_proses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_button_zakat_primary_rounded"
                android:fontFamily="@font/quicksand_bold"

                android:text="Proses"
                android:textAllCaps="false"
                android:textColor="@color/white_solid"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>