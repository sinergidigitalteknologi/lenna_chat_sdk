<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true"
        >

        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#005286" />
            <gradient android:angle="-90" android:endColor="#005286" android:startColor="#005286" />


        </shape>
    </item><!-- pressed -->

    <item android:drawable="@color/gray_saldo" android:state_focused="true">

        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#e6e6e6" />
            <gradient android:angle="-90" android:endColor="#e6e6e6" android:startColor="#e6e6e6" />
        </shape>
    </item>

    <!-- focused -->
    <item>

        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#9b9b9b" />
            <gradient android:angle="-90" android:endColor="#e6e6e6" android:startColor="#e6e6e6" />
        </shape>

    </item><!-- default -->




</selector>